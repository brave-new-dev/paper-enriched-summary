{
    "manifest_version":  3,
    "name":  "Arxiv PDF Saver",
    "version":  "1.0.0.2",
    "version_name":  "v1.0.0.2 2025-09-20T18:45:28Z",
    "description":  "Save arxiv.org papers as PDFs with cleaned filenames",
    "permissions":  [
                        "contextMenus",
                        "downloads",
                        "activeTab",
                        "storage",
                        "notifications"
                    ],
    "host_permissions":  [
                             "https://arxiv.org/*",
                             "https://export.arxiv.org/*"
                         ],
    "background":  {
                       "service_worker":  "background.js"
                   },
    "content_scripts":  [
                            {
                                "matches":  [
                                                "https://arxiv.org/*"
                                            ],
                                "js":  [
                                           "content.js"
                                       ],
                                "run_at":  "document_end",
                                "all_frames":  false
                            }
                        ],
    "action":  {
                   "default_title":  "Arxiv PDF Saver"
               },
    "icons":  {
                  "16":  "icons/logo.ico",
                  "32":  "icons/logo.ico",
                  "48":  "icons/logo.ico",
                  "128":  "icons/logo.ico"
              }
}
