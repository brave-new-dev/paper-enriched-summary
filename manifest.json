{
    "manifest_version":  3,
    "name":  "Noesis",
    "version":  "1.0.0.3",
    "version_name":  "v1.0.0.3 2025-09-20T20:25:45Z",
    "description":  "Save your papers with its titles and complete references",
    "permissions":  [
                        "contextMenus",
                        "downloads",
                        "activeTab",
                        "storage",
                        "notifications"
                    ],
    "host_permissions":  [
                             "https://arxiv.org/*",
                             "https://export.arxiv.org/*",
                             "https://api.semanticscholar.org/*"
                         ],
    "background":  {
                       "service_worker":  "background.js"
                   },
    "content_scripts":  [
                            {
                                "matches":  [
                                                "https://arxiv.org/*"
                                            ],
                                "js":  [
                                           "content.js"
                                       ],
                                "run_at":  "document_end",
                                "all_frames":  false
                            }
                        ],
    "action":  {
                   "default_title":  "Noesis:ScholarSaver"
               },
    "icons":  {
                  "16":  "icons/noesis.png",
                  "32":  "icons/noesis.png",
                  "48":  "icons/noesis.png",
                  "128":  "icons/noesis.png"
              }
}
